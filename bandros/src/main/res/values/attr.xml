<resources>

    <declare-styleable name="BCircleProgressBar">
        <attr name="cpb_min" format="integer" />
        <attr name="cpb_max" format="integer" />
        <attr name="cpb_progress" format="integer" />
        <attr name="cpb_progressColor" format="color" />
        <attr name="cpb_strokeColor" format="color" />
        <attr name="cpb_rotateAnimation" format="boolean" />
        <attr name="cpb_progressBarThickness" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BFormInputText">
        <attr name="b_formName" format="string" />
        <attr name="b_formNameColor" format="color" />
        <attr name="b_formHint" format="string" />
        <attr name="b_formHintColor" format="color" />
        <attr name="b_leftButtonShow" format="boolean" />
        <attr name="b_leftButtonIcon" format="reference" />
        <attr name="b_leftButtonIconTint" format="reference" />
        <attr name="b_rightButtonShow" format="boolean" />
        <attr name="b_rightButtonIcon" format="color" />
        <attr name="b_rightButtonIconTint" format="color" />
        <attr name="b_formReadOnly" format="boolean" />
        <attr name="b_formInputType">
            <flag name="text" value="0" />
            <flag name="phone" value="1" />
            <flag name="email" value="2" />
            <flag name="textArea" value="3" />
        </attr>
    </declare-styleable>

</resources>